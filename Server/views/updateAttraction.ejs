    <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/addAttraction"><i class="bi bi-arrow-left"></i></i> Back to attractions</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Attraction</h2>
            <span class="text-light">Use the below form to Update an attraction you created</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form id="update_user" action="/localUpload/updateAttraction/<%= local.id %>?_method=PUT" method="POST">
    <div class="new_user">
        <div class="form-group">
            <label for="Attraction" class="text-light">Attraction</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="Attraction" value="<%= local.Attraction %>" >
        </div>
        <div class="form-group">
            <label for="Address" class="text-light">Address</label>
            <input type="text" name="Address" value="<%= local.Address %>">
        </div>
        <div class="form-group">
            <label for="Description" class="text-light">Description</label>
            <!-- <input type="text" name="Description" value="<%= local.Description %>"> -->
            <textarea class="form-control " id="description" name="Description"><%= local.Description %></textarea>
        </div>
        <div class="form-group">
            <label for="Zipcode" class="text-light">Zip code</label>
            <input type="text" name="Zipcode" value="<%= local.Zipcode %>">
        </div>

        <div class="form-group">
            <button id="btn" type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
